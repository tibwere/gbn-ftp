                        if (winfo[id].status == CONNECTED && winfo[id].cfg.is_adaptive) {
                                gettimeofday(&tv, NULL);
                                winfo[id].sampleRTT = elapsed_usec(&winfo[id].start_timer, &tv);
                                winfo[id].estimatedRTT = ((1 - ALPHA) * winfo[id].estimatedRTT) + (ALPHA * winfo[id].sampleRTT);
                                winfo[id].devRTT = ((1 - BETA) * winfo[id].devRTT) + (BETA * abs((int) winfo[id].sampleRTT - (int) winfo[id].estimatedRTT));

                                #ifdef DEBUG
                                printf("{DEBUG} [Main Thread] Updated values for adaptive timeout for %d-th connection (base = %d): [sampleRTT = %u usec; estimatedRTT = %u usec; devRTT = %u usec]\n", 
                                        id, winfo[id].base, winfo[id].sampleRTT, winfo[id].estimatedRTT, winfo[id].devRTT);
                                #endif
                        }